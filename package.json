    "test": "jest"
  },
  "dependencies": {
    "firebase": "^4.1.3",
    "redux-saga": "^0.15.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^20.0.4",
    "jsdoc-to-markdown": "^3.0.0",
    "rimraf": "^2.6.1"
  },
  "standard": {
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "fetch",
