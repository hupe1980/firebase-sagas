{
  "name": "firebase-sagas",
  "version": "0.0.5",
  "description": "A redux saga integration for firebase.",
  "main": "./dist/index.js",
  "repository": "https://github.com/hupe1980/firebase-sagas.git",
  "author": "hupe1980 <hupe1980@web.de>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && babel src --out-dir dist --ignore *.test.js",
    "docs": "jsdoc2md src/*.js > docs.md",
    "test": "jest"
  },
  "dependencies": {
    "firebase": "^4.1.3",
    "redux-saga": "^0.15.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "jest": "^20.0.4",
    "jsdoc-to-markdown": "^3.0.0",
    "rimraf": "^2.6.1"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "standard": {
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "fetch",
      "it",
      "jest"
    ]
  }
}
